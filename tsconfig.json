{
    "compilerOptions": {
      "target": "es6",                   
      "module": "esnext",                
      "strict": true,                    
      "esModuleInterop": true,           
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true,              
      "sourceMap": true,                 
      "outDir": "./dist",                
      "rootDir": "./src",                
      "lib": ["es6", "dom"],             
      "moduleResolution": "node",       
      "allowJs": true,                   
      "checkJs": true                    
    },
    "include": ["src/**/*"],             
    "exclude": ["node_modules", "dist"]
}